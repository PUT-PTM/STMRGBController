<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.norbert.rgbcontroller.MainActivity"
    android:background="#000000">


    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/rgb"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Włącz Bluetooth"
        android:id="@+id/button"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:textAlignment="center"
        style="@android:style/ButtonBar"
        android:layout_marginBottom="10dp"
        android:onClick="wlaczBT" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akcelerometr"
        android:id="@+id/button2"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        style="@android:style/ButtonBar"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="akcelerometr" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textSize="30dp"
        android:text="Wyłącz"
        android:textColor="#ffffff"
        android:textAlignment="center"
        style="@android:style/ButtonBar"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:onClick="wylacz"/>

</RelativeLayout>